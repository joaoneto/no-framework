{
  "compilerOptions": {
    "target": "es6",
    "module": "ES2022",
    "outDir": "dist",
    "esModuleInterop": true,
    "suppressImplicitAnyIndexErrors": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "removeComments": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noEmit": true,
    "jsx": "preserve",
    "jsxFactory": "_createElement",
    "jsxFragmentFactory": "_Fragment",
    "sourceMap": true,
    "allowJs": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
